
<h1>Profile for <%= @user.email %></h1>

<%= image_tag(@user.avatar.url(:medium)) %>
<%= link_to('Edit', edit_user_path(@user)) if current_user %>

<div>
  <table>
    <% @user.recent_responses.each do |comment| %>
      <tr>
        <td><%= comment.created_at.strftime('%d/%m/%Y at %I:%M%p') %></td>
        <td><%= comment.comment %></td>
        <td><%= comment.topic.title %></td>
      </tr>
    <% end %>
  </table>
</div>
